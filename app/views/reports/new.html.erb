<h1>新規レポート</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:report, url: reports_path) do |f| %>

      <%= f.label :title, "曲名" %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :artist, "作曲家" %>
      <%= f.text_field :artist, class: 'form-control' %>
      
      <%= f.label :content, "感想・コツなど" %>
      <%= f.cktext_area :content, class: 'form-control' %>

      <%= f.submit "レポートを投稿する！", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
